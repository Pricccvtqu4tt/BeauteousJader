<view class="imt-audio"><view class="audio-control-wrapper"><image class="{{['cover',(!paused)?'on':'']}}" src="{{info.coverImgUrl}}" mode="aspectFill"></image><block wx:if="{{paused}}"><image class="play" src="/static/playbtn.png" alt data-event-opts="{{[['tap',[['operation',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image class="play" src="/static/pausebtn.png" alt data-event-opts="{{[['tap',[['operation',['$event']]]]]}}" bindtap="__e"></image></block></view><view style="font-weight:bold;font-size:34rpx;margin-top:24rpx;text-align:center;">{{info.title}}</view><view style="color:#999;font-size:26rpx;margin-top:10rpx;text-align:center;margin-bottom:18rpx;">{{info.singer}}</view><view class="audio-wrapper"><image class="prevbtn" src="/static/prev.png" mode="widthFix" data-event-opts="{{[['tap',[['step',[0]]]]]}}" bindtap="__e"></image><slider class="audio-slider" activeColor="#68339A" block-size="16" value="{{current_value}}" max="{{duration_value}}" data-event-opts="{{[['changing',[['changing',['$event']]]],['change',[['change',['$event']]]]]}}" bindchanging="__e" bindchange="__e"></slider><view class="audio-number">{{current+"/"+duration}}</view><image class="nextbtn" src="/static/next.png" mode="widthFix" data-event-opts="{{[['tap',[['step',[1]]]]]}}" bindtap="__e"></image></view></view>