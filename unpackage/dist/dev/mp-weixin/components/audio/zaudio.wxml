<view class="{{['imt-audio data-v-0aa62570',''+theme]}}"><view class="top data-v-0aa62570"><view class="audio-control-wrapper data-v-0aa62570"><image class="{{['cover data-v-0aa62570',(!paused)?'on':'']}}" src="{{info.coverImgUrl}}" mode="aspectFill"></image><block wx:if="{{paused}}"><image class="play data-v-0aa62570" src="./static/playbtn.png" alt data-event-opts="{{[['tap',[['operation',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image class="play data-v-0aa62570" src="./static/pausebtn.png" alt data-event-opts="{{[['tap',[['operation',['$event']]]]]}}" bindtap="__e"></image></block></view><view class="data-v-0aa62570"><view class="title data-v-0aa62570">{{info.title}}</view><view class="singer data-v-0aa62570">{{info.singer}}</view></view></view><view class="audio-wrapper data-v-0aa62570"><block wx:if="{{stepShow}}"><image class="prevbtn data-v-0aa62570" src="./static/prev.png" mode="widthFix" data-event-opts="{{[['tap',[['step',[0]]]]]}}" bindtap="__e"></image></block><slider class="audio-slider data-v-0aa62570" activeColor="{{themeColor}}" block-size="16" value="{{current_value}}" max="{{duration_value}}" data-event-opts="{{[['changing',[['changing',['$event']]]],['change',[['change',['$event']]]]]}}" bindchanging="__e" bindchange="__e"></slider><view class="audio-number data-v-0aa62570">{{current+"/"+duration}}</view><block wx:if="{{stepShow}}"><image class="nextbtn data-v-0aa62570" src="./static/next.png" mode="widthFix" data-event-opts="{{[['tap',[['step',[1]]]]]}}" bindtap="__e"></image></block></view></view>